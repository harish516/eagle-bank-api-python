{
    "name": "Eagle Bank API Development",
    "dockerComposeFile": "../docker-compose.devcontainer.yml",
    "service": "devcontainer",
    "workspaceFolder": "/workspaces/eagle-bank-api-python",
    // Configure tool-specific properties.
    "customizations": {
        "vscode": {
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.terminal.activateEnvironment": false,
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": false,
                "python.linting.flake8Enabled": true,
                "python.formatting.provider": "black",
                "python.formatting.blackArgs": [
                    "--line-length=88"
                ],
                "python.analysis.autoImportCompletions": true,
                "python.analysis.typeCheckingMode": "basic",
                "files.exclude": {
                    "**/__pycache__": true,
                    "**/.pytest_cache": true,
                    "**/node_modules": true
                },
                "terminal.integrated.defaultProfile.linux": "bash"
            },
            "extensions": [
                "ms-python.python",
                "ms-python.debugpy",
                "ms-python.flake8",
                "ms-python.black-formatter",
                "ms-vscode.vscode-json",
                "GitHub.copilot",
                "GitHub.copilot-chat",
                "ms-azuretools.vscode-docker",
                "redhat.vscode-yaml",
                "ms-vscode.vscode-thunder-client"
            ]
        }
    },
    // Use 'forwardPorts' to make a list of ports inside the container available locally.
    "forwardPorts": [
        8000,
        5434,
        6381,
        8081,
        5678
    ],
    "portsAttributes": {
        "8000": {
            "label": "Eagle Bank API",
            "onAutoForward": "notify"
        },
        "5434": {
            "label": "PostgreSQL Database (Dev Container)"
        },
        "6381": {
            "label": "Redis Cache (Dev Container)"
        },
        "8081": {
            "label": "Keycloak Auth (Dev Container)"
        },
        "5678": {
            "label": "Python Debug Port"
        }
    },
    // Use 'postCreateCommand' to run commands after the container is created.
    "postCreateCommand": ".devcontainer/post-create.sh",
    // Configure tool-specific properties.
    "remoteUser": "vscode"
}